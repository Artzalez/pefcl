{
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": false,
    "lib": ["es2018", "DOM"],
    "types": ["@citizenfx/server", "@types/node", "@types/jest"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@decorators/*": ["decorators/*"],
      "@locales/*": ["../../locales/*"],
      "@typings/*": ["../../typings/*"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["./**/*", "../../shared/**/*"],
  "exclude": ["**/node_modules"]
}